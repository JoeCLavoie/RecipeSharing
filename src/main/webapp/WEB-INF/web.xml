<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="3.0">

    <!-- Application Display Name -->
    <display-name>RecipeSharing</display-name>

    <!-- UserServlet Configuration -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.recipesharing.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>

    <!-- RecipeServlet Configuration -->
    <servlet>
        <servlet-name>RecipeServlet</servlet-name>
        <servlet-class>com.recipesharing.servlets.RecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeServlet</servlet-name>
        <url-pattern>/RecipeServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome File Configuration -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
